<section class="model-container main-content">
	<h1>{{collectionName}} - Model ID: {{_uid}} <a class="edit-btn" href="/admin/collections/{{collectionSlug}}/{{_uid}}/edit">Edit</a> <a class="delete-btn" href="">Delete</a></h1>

	<article class="model">
		{{#each fields}}
			<div class="field">
				<h5 class="field-name">{{this.name}}</h5>
				<div class="field-value">
				{{#ifEquals this.type "wysiwyg"}}
					{{{this.value}}}
				{{/ifEquals}}

				{{#ifEquals this.type "text"}}
					{{this.value}}
				{{/ifEquals}}

				{{#ifEquals this.type "email"}}
					{{this.value}}
				{{/ifEquals}}

				{{#ifEquals this.type "radio"}}
					{{this.value}}
				{{/ifEquals}}

				{{#ifEquals this.type "checkbox"}}
					<ul class="checkbox-value">
					{{#each this.value}}
						<li>{{this}}</li>
					{{/each}}
					</ul>
				{{/ifEquals}}

				{{#ifEquals this.type "image"}}
					<img class="image-value" src="{{../rootURL}}{{this.value}}">
					<br>URL: {{{../rootURL}}}{{{this.value}}}
				{{/ifEquals}}
				</div>
			</div>
		{{/each}}
	</article>
</section>