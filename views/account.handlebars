<section class="account-container main-content">
	<h1>Account</h1>

	<form method="post" action="/admin/account" class="account" enctype="multipart/form-data">
		<p>Username: <input type="text" name="username" value="{{currentUsername}}"></p>
		<p>Current Password: <input type="password" name="current_password"></p>
		<p>New Password: <input type="password" name="new_password"></p>

		<input type="submit" name="submit" value="Save">
	</form>
</section>