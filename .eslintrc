{
	"extends": "eslint:recommended",
	"parserOptions": {
	    "ecmaVersion": 2017,
    },
	"rules": {
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		],
		"linebreak-style": [
			"warn",
			"unix"
		],
		"quotes": [
			"warn",
			"double"
		],
		"semi": [
			"warn",
			"always"
		],
		"no-unused-vars": "off",
		"no-console": "off",
		"no-undef": "off",
		"no-new": "off",
		"space-before-function-paren": "off",
		"space-before-blocks": "off"
	},
	"plugins": [
		"html"
	],
	"env": {
		"browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
	},
	"root": true
}
